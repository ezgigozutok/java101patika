import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
    Scanner girdi=new Scanner(System.in);
        System.out.println("Dairenin yarıçapını giriniz:");
        double yarıcap=girdi.nextDouble();
        double pi=3.14;
        double alan=pi*yarıcap*yarıcap;
        double cevre=2*pi*yarıcap;
        System.out.println("Dairenin diliminin açısını giriniz:");
        int acı=girdi.nextInt();
        double daireDilimAlan=alan*acı/360;
        System.out.println("Dairenin alanı:"+alan);
        System.out.println("Dairenin çevresi:"+cevre);
        System.out.println("Daire diliminin alanı:"+daireDilimAlan);
    }
}
